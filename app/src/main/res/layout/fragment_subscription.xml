<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="7dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"
                android:padding="9dp"
                android:src="@drawable/app_learning_icon">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/menu_icon"
                    android:visibility="gone" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/maven_pro_medium"
                    android:gravity="center|start"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textColor="#0E2539"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:orientation="vertical">

                           <!-- <androidx.cardview.widget.CardView
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:elevation="3dp"
                                app:cardBackgroundColor="#DDFFB5"
                                app:cardUseCompatPadding="true"
                                android:layout_marginBottom="5dp"
                                app:cardCornerRadius="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">-->

                                <ss.com.bannerslider.Slider
                                    android:id="@+id/banner_slider1"
                                    android:layout_width="match_parent"
                                    android:layout_height="190dp"
                                    android:elevation="3dp"
                                    android:fitsSystemWindows="true"
                                    app:slider_animateIndicators="true"
                                    app:slider_loopSlides="true" />
                         <!--   </androidx.cardview.widget.CardView>-->



                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:gravity="center"
                   android:layout_marginTop="20dp"
                   android:layout_marginStart="5dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/maven_pro_medium"

                   android:text="Get premium subscription"
                   android:textStyle="bold"
                   android:textColor="#0E2539"
                   android:textSize="16dp" />

               <LinearLayout
                   android:id="@+id/signInWithGmailLL"
                   android:layout_width="match_parent"
                   android:layout_marginStart="25dp"
                   android:layout_marginEnd="25dp"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:layout_marginTop="20dp"
                   android:orientation="horizontal"
                   android:background="@drawable/subscription_price_background"
                   android:paddingTop="15dp"
                   android:paddingBottom="15dp">

                   <ImageView
                       android:layout_marginStart="15dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_marginEnd="10dp"
                       android:src="@drawable/pack2" />

                   <TextView
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="1 month"
                       android:textColor="#393737"
                       android:textSize="13dp" />
                   <TextView
                       android:layout_marginEnd="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="200 INR"
                       android:textColor="#F44336"
                       android:textSize="13dp" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_marginStart="25dp"
                   android:layout_marginEnd="25dp"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:layout_marginTop="20dp"
                   android:orientation="horizontal"
                   android:background="@drawable/subscription_price_background"
                   android:paddingTop="15dp"
                   android:paddingBottom="15dp">

                   <ImageView
                       android:layout_marginStart="15dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_marginEnd="10dp"
                       android:src="@drawable/pack3" />

                   <TextView
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="6 month"
                       android:textColor="#393737"
                       android:textSize="13dp" />
                   <TextView
                       android:layout_marginEnd="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="500 INR"
                       android:textColor="#F44336"
                       android:textSize="13dp" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_marginStart="25dp"
                   android:layout_marginEnd="25dp"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:layout_marginTop="20dp"
                   android:orientation="horizontal"
                   android:background="@drawable/subscription_price_background"
                   android:paddingTop="15dp"
                   android:paddingBottom="15dp">

                   <ImageView
                       android:layout_marginStart="15dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_marginEnd="10dp"
                       android:src="@drawable/pack4" />

                   <TextView
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="1 Year"
                       android:textColor="#393737"
                       android:textSize="13dp" />
                   <TextView
                       android:layout_marginEnd="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="1000 INR"
                       android:textColor="#F44336"
                       android:textSize="13dp" />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_marginStart="25dp"
                   android:layout_marginEnd="25dp"
                   android:layout_height="wrap_content"
                   android:gravity="center|start"
                   android:layout_marginTop="20dp"
                   android:orientation="horizontal"
                   android:background="@drawable/subscription_price_background"
                   android:paddingTop="15dp"
                   android:paddingBottom="15dp">

                   <ImageView
                       android:layout_marginStart="15dp"
                       android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_marginEnd="10dp"
                       android:src="@drawable/pack1" />

                   <TextView
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="Lifetime"
                       android:textColor="#393737"
                       android:textSize="13dp" />
                   <TextView
                       android:layout_marginEnd="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="2000 INR"
                       android:textColor="#F44336"
                       android:textSize="13dp" />
               </LinearLayout>


               <LinearLayout
                   android:id="@+id/buySubscriptionLL"
                   android:layout_marginStart="25dp"
                   android:layout_marginEnd="25dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="25dp"
                   android:background="@drawable/button_rounded_background"
                   android:gravity="center"
                   android:paddingTop="14dp"
                   android:paddingBottom="14dp">



                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/maven_pro_medium"
                       android:gravity="center"
                       android:text="Buy Subscription"
                       android:textColor="#F9F6FD"
                       android:textSize="13dp" />
               </LinearLayout>






           </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>